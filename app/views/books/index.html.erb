<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date Published</th>
      <th>Unique ID</th>
      <th>Publisher Name</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=book.title%></td>
        <td><%=book.author%></td>
        <td><%=book.date%></td>
        <td><%=book.uuid%></td>
        <td><%=book.publisher_name%></td>
        <td><%= link_to 'Delete Book', book, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <h3> Import new CSV file here </h3>
    <%= form_tag import_books_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
    <% end %>
</div>


